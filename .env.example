# ===========================================
# Graceland Royal Academy - Environment Variables
# ===========================================

# PHP Backend Configuration
# These are for the PHP backend - set in cPanel or server environment

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://gracelandroyalacademy.org

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=leuluzjk_graceland_db
DB_PASS=Vn]%LOO-x@[?q}YU
DB_NAME=leuluzjk_graceland_db

# JWT Configuration (SECURITY CRITICAL)
JWT_SECRET=your_production_jwt_secret_minimum_32_characters_long_and_random
JWT_REFRESH_SECRET=your_production_refresh_secret_minimum_32_characters_long_and_random
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Security Configuration
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION=900
SECURITY_SESSION_TIMEOUT=1800
SECURITY_REQUIRE_HTTPS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_API_REQUESTS=60

# CORS Configuration (comma-separated origins - RESTRICTIVE IN PRODUCTION)
CORS_ORIGINS=https://gracelandroyalacademy.org,https://www.gracelandroyalacademy.org
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# File Upload Configuration
UPLOAD_PATH=./php-backend/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# School Information
SCHOOL_NAME=Graceland Royal Academy Gombe
SCHOOL_MOTTO=Wisdom & Illumination
PRINCIPAL_NAME=Mrs. Grace Okoro
SCHOOL_EMAIL=info@gracelandacademy.edu.ng
SCHOOL_PHONE=+234-XXX-XXX-XXXX

# Email Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=your_email@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME=Graceland Royal Academy

# Redis Configuration (optional, for enhanced rate limiting)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=error
LOG_MAX_FILES=30
LOG_PATH=./php-backend/logs

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ===========================================
# Frontend Environment Variables
# ===========================================

# Backend API Configuration (supports both Vite and Create React App)
VITE_API_BASE_URL=https://gracelandroyalacademy.org/api
REACT_APP_API_URL=https://gracelandroyalacademy.org/api

# App Configuration
VITE_APP_NAME=Graceland Royal Academy Gombe
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=School Management System

# Frontend Security
VITE_ENABLE_HTTPS=true
VITE_API_TIMEOUT=10000

